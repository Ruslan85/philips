<h1>Listing tasks</h1>
<br>
<b id="hello">Hello</b>
<br>
<button id="hider">Скрыть</button>
<button id="shower">Отобразить</button>
<button id="default">Сброс</button>
<br>
<br>
<p>Создание нового: 
	<%= link_to 'New Task', new_task_path, id:"new_link", remote: true %>
</p>

<br>

<h2 id="incomplete">Incomplete Tasks</h2>
<div class="tasks" id="incomplete_tasks">
  <%= render @incomplete_tasks %>
</div>

<h2>Complete Tasks</h2>
<div class="tasks" id="complete_tasks">
 <%= render @complete_tasks %>
</div>


<script>
	$( "#hider" ).click(function() {
		$( "p" ).hide("slow");
		$('#incomplete_tasks').hide("slow");
		$('#incomplete').hide("slow");
		$( "p" ).after( $( "#hello" ) );
	});
	$( "#shower" ).click(function() {
		$( "p" ).show(1000);
		$('#incomplete_tasks').show(1000);
		$('#incomplete').show(1000);
		$( "#hello" ).remove();
		$( "p" ).before( "<h3>Test</h3>" );
	});
	$( "#default" ).click(function() {
		$( "p" ).show(1000).addClass( "selected" );
		$('#incomplete_tasks').show(1000);
		$('#incomplete').show(1000);
		$( "h3" ).remove();
	});
</script>